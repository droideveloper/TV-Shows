<resources>

  <style name="TvShowsTextAppearance" parent="TextAppearance.AppCompat" />

  <style name="TvShowsTextAppearance.Black" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_black</item>
    <item name="fontFamily">@font/roboto_black</item>
  </style>

  <style name="TvShowsTextAppearance.Bold" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_bold</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <style name="TvShowsTextAppearance.Italic" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_italic</item>
    <item name="fontFamily">@font/roboto_italic</item>
  </style>

  <style name="TvShowsTextAppearance.Light" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_light</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>

  <style name="TvShowsTextAppearance.Medium" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_medium</item>
    <item name="fontFamily">@font/roboto_medium</item>
  </style>

  <style name="TvShowsTextAppearance.Regular" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_regular</item>
    <item name="fontFamily">@font/roboto_regular</item>
  </style>

  <style name="TvShowsTextAppearance.Thin" parent="TvShowsTextAppearance">
    <item name="font">@font/roboto_thin</item>
    <item name="fontFamily">@font/roboto_thin</item>
  </style>

  <style name="TvShowsTextAppearance.Medium.Collapsed" parent="TvShowsTextAppearance.Medium">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="TvShowsTextAppearance.Medium.Expanded" parent="TvShowsTextAppearance.Medium">
    <item name="android:textColor">@android:color/transparent</item>
  </style>

</resources>